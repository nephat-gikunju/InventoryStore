<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Image and Category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_product"
                app:tint="@color/primary"
                android:background="@drawable/product_image_background"
                android:padding="8dp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_product_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electronics"
                    android:textSize="10sp"
                    android:textColor="@color/primary"
                    android:background="@drawable/category_chip_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Electronics" />

            </LinearLayout>

        </LinearLayout>

        <!-- Product Name -->
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp"
            tools:text="Wireless Bluetooth Earbuds" />

        <!-- Product Description -->
        <TextView
            android:id="@+id/tv_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product description"
            android:textSize="12sp"
            android:textColor="@color/on_surface_variant"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp"
            tools:text="High-quality wireless earbuds with noise cancellation" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/outline_variant"
            android:layout_marginBottom="12dp" />

        <!-- Price -->
        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ksh 0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            tools:text="Ksh 2,500.00" />

        <!-- Stock Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_stock_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_circle"
                    app:tint="@color/success"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_product_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock: 0"
                    android:textSize="12sp"
                    android:textColor="@color/success"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Stock: 25" />

            </LinearLayout>

            <!-- Add to Cart Button (for POS) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_cart"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:icon="@drawable/ic_add"
                app:iconSize="16dp"
                app:iconTint="@color/on_primary"
                app:backgroundTint="@color/primary"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>